Options +FollowSymLinks
Options -MultiViews
Options All -Indexes
RewriteEngine On

Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, Authorization, Content-Language, Accept, Accept-Language"

ErrorDocument 404 /error.php

SetEnv ENV_Q
SetEnv VALIDATE_DB_TABLE
SetEnv CONSTS_PATH
SetEnv VALIDATE_DB
SetEnv DB_HOST
SetEnv DB_USERNAME
SetEnv DB_PASSWORD